@page
@model Nullam.Pages.Party.EventsPage
@using Nullam.Pages.Extensions
@{
    Layout="_Index";
    var buttonsForUpcomingEvents = new Dictionary<string,string>{ { "OSAVÕTJAD", "DETAILS" }, { "<img border=\"0\" alt=\"Remove\" src=\"~/lib/remove.svg\" width=\"50\" height=\"50\"/>", "DELETE" } };
    var buttonsForPastEvents = new Dictionary<string,string>{ { "OSAVÕTJAD", "DETAILS" } };
    var upcomingEvents = Model.GetUpcomingEvents(Model?.Items);
    var pastEvents = Model.GetPastEvents(Model?.Items);
}
<style>
    .column {
        float: left;
        width: 50%;
    }

    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    h4 {
        text-align: center;
        color: white;
        background-color: steelblue;
    }
</style>

<body>
    <div class="row">
        <div class="column">
            <p style="background-color:steelblue;text-align: center; color: white;width:600px;height:300px">Tekst</p>
            <h4>Tulevased üritused</h4>
            <p>
                <table>
                    @Html.ShowTable(upcomingEvents, buttonsForUpcomingEvents)
                </table>
            </p>
        </div>

        <div class="column">
            <img src="~/lib/pilt.jpg" alt="pink" style="width:600px;height:300px;">
            <h4>Toimunud üritused</h4>
            <p>
                <table>
                    @Html.ShowTable(pastEvents, buttonsForPastEvents)
                </table>
            </p>
            
        </div>
    </div>
</body>

<div>
    <a class="btn btn-light"
       asp-page="Create" 
       asp-page-handler = "Create" 
       asp-route-order="@Model?.CurrentOrder"
       asp-route-index="@Model?.PageIndex" 
       asp-route-filter="@Model?.CurrentFilter"
    >Lisa üritus</a>
</div>